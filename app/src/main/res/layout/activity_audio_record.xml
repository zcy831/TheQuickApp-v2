<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/bg3">

    <Button
        android:id="@+id/play_bt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/end_bt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="42dp"
        android:background="@drawable/roundedbuttonblue"
        android:text="Play Record"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/start_bt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:background="@drawable/roundedbuttongreen"
        android:text="Record Start"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/saveSound"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Save" />

    <Button
        android:id="@+id/end_bt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/start_bt"
        android:layout_centerVertical="true"
        android:background="@drawable/roundedbuttonred"
        android:text="Record Stop"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</RelativeLayout>